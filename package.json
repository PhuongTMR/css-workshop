{
  "name": "css-workshop",
  "author": "Brad Westfall",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all --parallel styles styles:watch styles:watch-lessons server",
    "styles": "node-sass styles/all.scss lessons/styles/all.do-not-edit.css --source-map true",
    "styles:watch": "node-sass -w styles/all.scss lessons/styles/all.css --source-map true",
    "styles:watch-lessons": "node-sass -rw lessons -o lessons --source-map true",
    "server": "browser-sync start --server 'lessons' --files 'lessons' --no-notify --no-open"
  },
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "printWidth": 90,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
